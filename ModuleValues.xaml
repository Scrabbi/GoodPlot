<Window x:Class="GoodPlot.ModuleValues"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ModuleValues" Topmost="True" Height="300" Width="371.053">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="250*"/>
            <RowDefinition Height="378*"/>
        </Grid.RowDefinitions>
        <DataGrid   x:Name="Values_List" Grid.Row="0">
            <DataGrid.Columns>
                <DataGridTextColumn  Binding="{Binding KKS,Mode=OneWay,UpdateSourceTrigger=PropertyChanged,StringFormat='HH:mm:ss.fff yyyy-MM-dd'}" Width="150" Header="Параметры" />
                <DataGridTextColumn  Binding="{Binding Value,Mode=OneWay,UpdateSourceTrigger=PropertyChanged}" Width="100" Header="Значение" />
                <DataGridTextColumn  Binding="{Binding Value,Mode=OneWay,UpdateSourceTrigger=PropertyChanged}" Width="100" Header="Среднее" />
            </DataGrid.Columns>
        </DataGrid>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Stretch" Grid.Row="1">
            <Label Content="Полуинтервал усреднения" Background="Bisque" HorizontalContentAlignment="Center" HorizontalAlignment="Stretch" />
            <TextBox Text="15" x:Name="IntervalSecTexBox" Width="55" Height="34" VerticalAlignment="Top"/>
        </StackPanel>

    </Grid>
</Window>
